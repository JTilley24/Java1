<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Custom Theme-->
    <style name="Theme.carTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:textViewStyle">@style/Theme.carTheme.outputText</item>
        <item name="android:buttonStyle">@style/Theme.carTheme.selectButton</item>
    </style>
   
    <style name="Theme.carTheme.outputText" parent="android:style/TextAppearance.Medium">
        <item name="android:textColor">#002BFF</item>
        <item name="android:textSize">20sp</item>
   	</style>
    
    <style name="Theme.carTheme.selectButton" parent="android:style/Widget.Holo.Light.Button">
        <item name="android:background">#B8DFF2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    
    <!-- Themes Set by Templates -->
    <style name="carStyles">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">80dp</item>
    	<item name="android:orientation">horizontal</item>
    	<item name="android:gravity">center</item>
    	<item name="android:padding">5dp</item>  
    </style>
    
    <style name="styleButtons">
        <item name="android:layout_width">wrap_content</item>
       	<item name="android:layout_height">wrap_content</item>
       	<item name="android:textSize">18sp</item>
    </style>
    
    <style name="carImage">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:maxHeight">50dp</item>
    	<item name="android:scaleType">fitCenter</item>
    	<item name="android:adjustViewBounds">true</item>
    </style>
    
    <style name="titleText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#002BFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#999698</item>
        <item name="android:drawableStart">@drawable/brand</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

</resources>
